{
  "version": 2,
  "framework": null,
  "builds": [
    {
      "src": "api/index.php",
      "use": "vercel-php@0.6.0",
      "config": {
        "php": {
          "version": "8.2",
          "composerVersion": "2",
          "maxLambdaSize": "50mb"
        }
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/build/(.+)",
      "dest": "/public/build/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(css|js)/(.+)",
      "dest": "/public/$1/$2"
    },
    {
      "src": "/favicon\\.ico",
      "dest": "/public/favicon.ico"
    },
    {
      "src": "/robots\\.txt",
      "dest": "/public/robots.txt"
    },
    {
      "src": "/assets/(.+)",
      "dest": "/public/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "env": {
    "APP_NAME": "Sistem Inventaris",
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_URL": "${VERCEL_URL}",
    "ASSET_URL": "${VERCEL_URL}",
    "DB_CONNECTION": "sqlite",
    "DB_DATABASE": "/tmp/database.sqlite",
    "CACHE_DRIVER": "array",
    "SESSION_DRIVER": "array",
    "LOG_CHANNEL": "stderr",
    "LOG_LEVEL": "debug",
    "VIEW_COMPILED_PATH": "/tmp/views",
    "FILESYSTEM_DISK": "local",
    "BROADCAST_DRIVER": "log",
    "QUEUE_CONNECTION": "sync",
    "SESSION_LIFETIME": "120",
    "MAIL_MAILER": "smtp",
    "MAIL_HOST": "mailhog",
    "MAIL_PORT": "1025",
    "MAIL_USERNAME": "null",
    "MAIL_PASSWORD": "null",
    "MAIL_ENCRYPTION": "null",
    "MAIL_FROM_ADDRESS": "hello@example.com",
    "MAIL_FROM_NAME": "${APP_NAME}",
    "SANCTUM_STATEFUL_DOMAINS": "${VERCEL_URL}",
    "SESSION_DOMAIN": "${VERCEL_URL}",
    "CORS_ALLOWED_ORIGINS": "*",
    "VITE_APP_NAME": "${APP_NAME}",
    "VITE_PUSHER_APP_KEY": "null",
    "VITE_PUSHER_HOST": "null",
    "VITE_PUSHER_PORT": "443",
    "VITE_PUSHER_SCHEME": "https",
    "VITE_PUSHER_APP_CLUSTER": "mt1"
  },
  "buildCommand": "composer install --no-dev --optimize-autoloader && npm ci && npm run build",
  "outputDirectory": "public"
} 